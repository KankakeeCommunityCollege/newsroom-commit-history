<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
      <!-- Turn on Custom Errors -->
      <customErrors mode="On"
        defaultRedirect="https://news.kcc.edu/404.html">
        <error statusCode="404" redirect="https://news.kcc.edu/404.html"/>
      </customErrors>
        <rewrite>
            <rules>
                <rule name="HTTPS Redirect" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions>
                        <add input="{HTTPS}" pattern="^OFF$" />
                    </conditions>
                    <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>
